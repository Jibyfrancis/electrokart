                                <th scope="col">Amount</th>

                                <th scope="col">Payment</th>
                                <th scope="col">Order Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Address</th>

                                <th scope="col">Order ID</th>
                                <th scope="col">Action</th>


                            </tr>
                        </thead>
                        <tbody>


                            <tr>
                                <td> <img style="width:70px; height:70; "
                                        src="/user/productimage/{{this.cartitem.images.[0]}}" alt=""></td>
                                <td>{{this.productTotal}}</td>
                                <td>{{this.payment}}</td>
                                <td>{{this.orderDate}}</td>
                                <td
                                    style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: rgb(224, 38, 38);">
                                    {{this.orderStatus}}</td>
                                <td>
                                    <h4 class="card-title">{{this.deliveryAddress.name}}</h4>
                                    <p class="card-text">
                                        {{this.deliveryAddress.address}},{{this.deliveryAddress.city}},{{this.deliveryAddress.country}}{{this.deliveryAddress.pin}}
                                    </p>
                                    <p class="card-text">{{this.deliveryAddress.mobile}}{{this.deliveryAddress.email}}
                                    </p>
                                </td>

                                <td>{{this._id}}</td>
                                {{!-- {{#if this.cancelStatus}}
                                <td></td>

                                {{else}}
                                {{#if this.deliveredStatus}}
                                <td><a href="/returnOrder/{{this._id}}/{{this.cartitem._id}}" class="btn btn-danger"
                                        style="width:120px ;">Return</a></td>
                                {{else}}
                                <td><a href="/cancelOrder/{{this._id}}/{{this.cartitem._id}}" class="btn btn-danger"
                                        style="width:120px ;">CancelOrder</a></td>
                                {{/if}}

                                {{/if}} --}}
                                {{#if_eq this.orderStatus 'Delivered'}}
                                <td><a href="/returnOrder/{{this._id}}/{{this.cartitem._id}}" class="btn btn-danger"
                                        style="width:120px ;">Return</a></td>
                                {{else}}

                                {{#if_Neq this.orderStatus 'Shipped'}}
                                {{#if_Neq this.orderStatus 'Returned'}}
                                {{#if_Neq this.orderStatus 'Refund Approved'}}
                                {{#if_Neq this.orderStatus 'Cancelled'}}

                                <td><a href="/cancelOrder/{{this._id}}/{{this.cartitem._id}}/{{this.productTotal}}"
                                        class="btn btn-danger" style="width:120px ;">CancelOrder</a></td>


                                {{/if_Neq}}
                                {{/if_Neq}}
                                {{/if_Neq}}
                                {{/if_Neq}}
                                {{/if_eq}}







                                {{!-- <td><a href="/cancelOrder/{{this._id}}/{{this.cartitem._id}}"
                                        class="btn btn-danger">Cancel Order</a></td> --}}
                                {{!-- <td><a href="/viewOrder/{{this._id}}" class="btn btn-primary">View Order</a></td>
                                --}}


                            </tr>


                        </tbody>
                        {{/each}}

                    </table>
                    <br>

                </div>

                <!-- /product tab -->
            </div>


            <nav aria-label="Page navigation example">

                <ul class="pagination justify-content-center " style="float: right;">
                    <li class="page-item ">
                        <a class="page-link" href="/orders?page={{prevpage.page}}" style="color: #d43f3a;">Previous</a>
                    </li>
                    {{#each pagenum }}
                    {{#if_eq this.page ../pageno}}
                    <li class="page-item "><a class="page-link" style="background-color: #d43f3a; color: white;"
                            href="/orders?page={{this.page}}">{{this.page}}</a></li>
                    {{else}}
                    <li class="page-item"><a class="page-link" style="color: black;" href="/orders?page={{this.page}}">{{this.page}}</a></li>
                    {{/if_eq}}
                    {{/each}}
                    <li class="page-item">
                        <a class="page-link" href="/orders?page={{nextpage.page}}" style="color: #d43f3a;">Next</a>
                    </li>
                </ul>
            </nav>

            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
