                    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                                <div class="d-flex align-items-center justify-content-between mb-3">

                                    <h3 class="text-primary">Edit Category</h3>


                                </div>


                                <form action="/admin/updateCategory/{{category._id}}" method="post"
                                    enctype="multipart/form-data">

                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput"
                                            placeholder="Add Category " oninput="this.value = this.value.toUpperCase()" name="category" value="{{category.category}}"
                                            required>
                                        <label for="floatingInput">Category</label>
                                    </div>  

                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput"
                                            placeholder="Add Offer " name="category_offer"  oninput="this.value = this.value.toUpperCase()" value="{{category.category_offer}}"
                                            >
                                        <label for="floatingInput">Category Offer</label>
                                    </div>
                                    <div class="form-floating mb-4">
                                        <img src="/user/productimage/{{category.images.[0]}}" alt=""
                                            style="width: 70px; height: auto;" id="imgView">
                                        <input type="file" class="form-control" id="floatingPassword" placeholder=""
                                            name="image" onchange="viewImage(event)">
                                        <label for="floatingPassword">Upload File</label>
                                    </div>


                                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Update</button>
                                </form>


                            </div>
                        </div>
                    </div>
