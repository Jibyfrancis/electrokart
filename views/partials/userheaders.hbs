<header>


    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="/" class="logo">
                            <img src="/user/images/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->

                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form>
                            {{!-- <select class="input-select">
                                <option value="0">All Categories</option>
                                <option value="1">Category 01</option>
                                <option value="1">Category 02</option>
                            </select> --}}
                            {{!-- <input class="input" placeholder="Search here" id="myInput" onkeyup="myFunction()">
                            <button class="search-btn">Search</button> --}}
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->

                <!-- ACCOUNT -->

                <div class="col-md-3 clearfix">

                    <div class="header-ctn " style="display:flex ; flex-direction: row;">
                        {{#if user}}
                        <!-- Wishlist -->
                        <div>
                            <a href="/view-wishlist">
                                <i class="fa fa-heart-o"></i>
                                <span>Your Wishlist</span>
                                <span class="qty" id="wish-count">{{getwishcount}}</span>
                            </a>
                        </div>
                        <!-- /Wishlist -->

                        <!-- Cart -->
                        <div>
                            <a href="/cart">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Your Cart</span>
                                <span class="qty" id="cart-count">{{getcount}}</span>
                            </a>

                        </div>
                        {{/if}}
                        <!-- /Cart -->

                        <!-- login -->
                        {{!-- <div class="dropdown"> --}}
                            <div class="dropdown">
                                <a  class=" dropdown-toggle btn" style="padding: 0;" 
                                    data-toggle="dropdown">
                                    <i class="fa fa-user "> </i>
                                    <span style="color:rgb(255, 255, 255);"> {{user.Name}}</span></a>
                                 

                                <ul class="dropdown-menu">
                                    {{#if user}}
                                    <li><a href="/userProfile" > <i  class="fa fa-user "></i> My Profile</a> </li>
                                    <li><a href="/orders" > <i  class=" fa fa-first-order "></i> Orders</a></li>
                                    <li><a href="/logout"><i  class="fa fa-sign-out "></i> Logout</a></li>
                                    {{else}}
                                    <li><a href="/login"><i  class="fa fa-sign-in"></i> Login</a></li>
                                    {{/if}}

                                </ul>

                            </div>


                        {{!-- </div> --}}
                        <!-- /login -->

                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>
<!-- /HEADER -->

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li class="active"><a href="/">HOME</a></li>
                <li><a href="#"></a></li>
                {{!-- <li><a href="#">Categories</a></li> --}}
                {{#each cat}}
                <li><a style="text-transform: capitalize;" href="/products/{{this.category}}">{{this.category}} </a></li>
                {{/each}}
            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
